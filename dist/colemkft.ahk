;-------------------------------------------------------------------------------
; DeadKey Helpers
;-------------------------------------------------------------------------------

global DeadKey := ""

DoTerm(base:="") {
  global DeadKey

  term := SubStr(DeadKey, 2, 1)
  Send, {%term%}
  Send, {%base%}
  DeadKey := ""
}

DoAction(action:="") {
  global DeadKey

  if (StrLen(action) != 2) {
    Send, {%action%}
    DeadKey := ""
  }
  else if (action == DeadKey) {
    DoTerm(SubStr(DeadKey, 2, 1))
  }
  else {
    DeadKey := action
  }
}

SendKey(base, deadkeymap) {
  if (!DeadKey) {
    DoAction(base)
  }
  else if (deadkeymap.HasKey(DeadKey)) {
    DoAction(deadkeymap[DeadKey])
  }
  else {
    DoTerm(base)
  }
}


